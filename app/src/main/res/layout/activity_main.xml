<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/kottuwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107"
        android:fontFamily="sans-serif-condensed"
        android:text="KOTTUWA"
        android:textAlignment="center"
        android:textColor="#2C2525"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/feedback1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feed Back"
        android:textColor="#0C0C0C"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rateus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Rate Us"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressBackgroundTint="#EDEAE0"
            android:progressTint="#FFEB3B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/add_email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/feedback2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Feed Back"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/add_feedbak"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Feed Back"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        app:cornerRadius="60px" />
</LinearLayout>